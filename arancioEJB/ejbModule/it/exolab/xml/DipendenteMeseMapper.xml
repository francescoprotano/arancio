<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
    PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="it.exolab.mapper.DipendenteMeseMapper">

	<update id="update" parameterType="it.exolab.model.DipendenteMese">
		UPDATE dipendenti_mesi
		SET stato=#{stato}
		WHERE id_dipendente_fk=#{id_dipendente_fk} AND  id_mese_fk=#{id_mese_fk}
	</update>
	
	<delete id="delete" parameterType="it.exolab.model.DipendenteMese">
		DELETE FROM dipendenti_mesi
		WHERE id_dipendente_fk=#{id_dipendente_fk} AND  id_mese_fk=#{id_mese_fk}
	</delete>
	
	<select id="selectOne" resultType="it.exolab.model.DipendenteMese">
	SELECT *
	FROM dipendenti_mesi
	WHERE id_dipendente_fk=#{id_dipendente_fk} AND  id_mese_fk=#{id_mese_fk}
	</select>
	<select id="selectAll" resultType="it.exolab.model.DipendenteMese">
	SELECT *
	FROM dipendenti_mesi
	</select>
	<select id="selectByDipendente" resultType="it.exolab.model.DipendenteMese">
	SELECT *
	FROM dipendenti_mesi
	WHERE id_dipendente_fk=#{id_dipendente_fk}
	</select>
	<select id="selectByMese" resultType="it.exolab.model.DipendenteMese">
	SELECT *
	FROM dipendenti_mesi
	WHERE id_mese_fk=#{id_mese_fk}
	</select>
	<select id="selectByStato" resultType="it.exolab.model.DipendenteMese">
	SELECT *
	FROM dipendenti_mesi
	WHERE stato=#{stato}
	</select>
	
</mapper>